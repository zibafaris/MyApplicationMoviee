<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="#B7E6E2"
    android:padding="@dimen/noraml_padding"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/movieIcon"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_marginStart="4dp"
        android:padding="@dimen/noraml_padding"
        android:src="@drawable/movie_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="4dp" />

    <ImageView
        android:id="@+id/movieSaveButton"
        android:layout_width="@dimen/normal_button"
        android:layout_height="@dimen/normal_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_save"
        android:alpha="0.5"/>

    <TextView
        android:id="@+id/movieTitletextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title of movie"
        android:maxLines="1"
        android:layout_margin="@dimen/small_margin"
        app:layout_constraintStart_toEndOf="@+id/movieIcon"
        app:layout_constraintTop_toTopOf="@+id/movieIcon" />

    <TextView
        android:id="@+id/movieDescTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/movieIcon"
        app:layout_constraintStart_toEndOf="@+id/movieIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>